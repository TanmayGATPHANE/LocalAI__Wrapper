# ===================================
# Enterprise AI Chat Configuration
# ===================================

# Default AI Provider (ollama, openai, anthropic, grok, etc.)
DEFAULT_PROVIDER=ollama

# Ollama Configuration
OLLAMA_SERVER_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:1b

# OpenAI Configuration (for future use)
OPENAI_API_KEY=your_openai_key_here
OPENAI_DEFAULT_MODEL=gpt-4

# Anthropic Configuration (for future use)
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet

# Grok Configuration (for future use)
GROK_API_KEY=your_grok_key_here
GROK_DEFAULT_MODEL=grok-1

# UI Configuration
THEME=dark
ENABLE_DEBUGGING=true
MAX_CONVERSATION_HISTORY=100
AUTO_SAVE_INTERVAL=30000

# Storage Configuration
STORAGE_TYPE=localStorage
STORAGE_KEY_PREFIX=ollama_enterprise_

# Chat Configuration
MAX_MESSAGE_LENGTH=8000
TYPING_SPEED=50
ENABLE_STREAMING=true
CONVERSATION_MEMORY=true

# Model Configuration
AUTO_DETECT_MODELS=true
MODEL_REFRESH_INTERVAL=60000
SHOW_MODEL_INFO=true

# Security Configuration
CORS_ENABLED=true
RATE_LIMITING=false
MAX_REQUESTS_PER_MINUTE=60

# Feature Flags
ENABLE_VOICE_INPUT=false
ENABLE_TEXT_TO_SPEECH=false
ENABLE_EXPORT_CHAT=true
ENABLE_MULTIPLE_CONVERSATIONS=true
